<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/grid_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Gıda -->
        <LinearLayout
            android:id="@+id/card_gida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_food"
                android:contentDescription="Gıda" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gıda"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Teknolojik Aletler -->
        <LinearLayout
            android:id="@+id/card_teknoloji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_technology"
                android:contentDescription="Teknoloji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknolojik Aletler"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Beyaz Eşya -->
        <LinearLayout
            android:id="@+id/card_beyazesya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_whitegoods"
                android:contentDescription="Beyaz Eşya" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beyaz Eşya"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Kişisel Bakım -->
        <LinearLayout
            android:id="@+id/card_bakim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_personalcare"
                android:contentDescription="Kişisel Bakım" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kişisel Bakım"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Ev & Yaşam -->
        <LinearLayout
            android:id="@+id/card_ev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Ev ve Yaşam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ev ve Yaşam"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Bebek & Oyuncak -->
        <LinearLayout
            android:id="@+id/card_bebek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_baby"
                android:contentDescription="Bebek ve Oyuncak" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebek Ürünleri"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Evcil Hayvan Ürünleri -->
        <LinearLayout
            android:id="@+id/card_evcil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/bg_white_rounded" > >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_pet"
                android:contentDescription="Evcil Hayvan Ürünleri" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evcil Hayvan Ürünleri"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </GridLayout>
</ScrollView>
