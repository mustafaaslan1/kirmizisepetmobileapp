<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabım"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="24dp" />

        <!-- Kullanıcı Bilgileri Başlıkları -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İsim: "
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-posta: "
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_email_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-posta Durumu: Kontrol ediliyor..."
            android:textSize="20sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon: "
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doğum Tarihi: "
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_register_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kayıt Tarihi: "
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <!-- E-Posta Doğrulama Butonu -->
        <Button
            android:id="@+id/btn_verify_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="E-POSTA DOĞRULA"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#D32F2F"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"/>

        <!-- Şifre Güncelleme Butonu -->
        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ŞİFREYİ GÜNCELLE"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#C62828"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"/>

        <!-- Geri Dön Butonu -->
    </LinearLayout>
</ScrollView>
